#!/usr/bin/env bash
##copyright##

set -eu

usage() {
    echo "Usage:"
    echo "  $SCRIPT [-h,--help] "
    echo ""
    echo "options:"
    echo "  -h                   Print this usage"
    echo "  --help               Show man page"
    echo ""
}

##echoerr##

cleanup() {
    return
}
trap cleanup EXIT

SCRIPT=$(basename $0)

set +e
ARGS=$(getopt -o h -l "help" -n "$SCRIPT" -- "$@");
if [ $? -ne 0 ]; then
    set -e
    usage
    exit 2
fi
set -e

eval set -- "$ARGS";

while true; do
    case $1 in
        -h)
            shift
            usage
            exit 0
            ;;
        --help)
            shift
            git help project-COMMAND "$@"
            exit $?
            ;;
        --)
            shift;
            break;
            ;;
    esac
done
