#!/usr/bin/env bash
##copyright##

set -eu

usage() {
    echo "Usage:"
    echo " $SCRIPT [-h,--help]"
    echo ""
    echo "options:"
    echo " -h                   Print this usage"
    echo " --help               Show man page"
    echo ""
    echo "See also options for git help"
}

SCRIPT=`basename $0`

set +u
case $1 in
    -h)
        shift
        usage
        exit 0
        ;;
    --help)
        shift
        # Do nothing extra
        # Help is the default action
        ;;
esac
set -u

git help gitproject-userguide "$@"
